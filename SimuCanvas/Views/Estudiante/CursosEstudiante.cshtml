@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cursos Estudiante</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/CursosEstudianteSheet.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-3 left-container">
                <img src="~/Images/ulacitlogo.png" class="img-fluid mb-5" alt="ULACIT LOGO">
                <!-- Botones del lado izquierdo -->
                <div class="perfil-btn">
                    <a href="@Url.Action("PerfilEstudiante", "Estudiante")" type="button" class="btn btn-secondary btn-block">
                        <i class="fas fa-user"></i>
                        Perfil
                    </a>
                </div>
                <div class="signout-btn">
                    <form asp-action="SignOut" asp-controller="Estudiante" method="post">
                        <button type="submit" class="btn btn-dark btn-block">
                            <i class="fas fa-sign-out-alt"></i>
                            Sign Out
                        </button>
                    </form>
                </div>
            </div>

            <div class="col-md-9">
                <!-- Información de bienvenida al lado derecho -->
                <div class="bienvenida-info">
                    <h2>Cursos Matriculados</h2>

                    <div class="scroll-box mt-5">
                        <!-- Your materia cards here -->
                        <div class="materia-card text-center" style="width: 14rem;">
                            <h3>Programación I</h3>
                            <p><strong>Tipo:</strong> Virtual</p>
                            <p><strong>Profesor:</strong> Juan Pérez</p>
                            <a href="#" class="btn btn-success mt-3">Programacion I</a>
                        </div>
                        <div class="materia-card text-center" style="width: 14rem;">
                            <h3>Sistemas Operativos</h3>
                            <p><strong>Tipo:</strong> Presencial</p>
                            <p><strong>Profesor:</strong> Ana López</p>
                            <a href="#" class="btn btn-success mt-3">Sistemas Operativos</a>
                        </div>
                        <div class="materia-card text-center" style="width: 14rem;">
                            <h3>Ingles IV</h3>
                            <p><strong>Tipo:</strong> Virtual</p>
                            <p><strong>Profesor:</strong> Carlos Gómez</p>
                            <a href="#" class="btn btn-success mt-3">Ingles IV</a>
                        </div>
                        <div class="materia-card text-center" style="width: 14rem;">
                            <h3>Electronica Digital</h3>
                            <p><strong>Tipo:</strong> Virtual</p>
                            <p><strong>Profesor:</strong> Laura González</p>
                            <a href="#" class="btn btn-success mt-3">Electronica Digital</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
