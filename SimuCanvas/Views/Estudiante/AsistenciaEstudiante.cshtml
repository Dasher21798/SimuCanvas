@model List<SimuCanvas.Models.Attendance>

<h2>Registro de Asistencia</h2>

<table class="table">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Asistencia</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.AttendanceDate.ToShortDateString()</td>
                <td>@(record.IsPresent ? "Presente" : "Ausente")</td>
            </tr>
        }
    </tbody>
</table>
